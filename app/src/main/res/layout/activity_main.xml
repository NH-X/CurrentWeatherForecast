<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_200"
            android:id="@+id/tl_head">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:maxLength="15"
                android:maxEms="15"
                android:ellipsize="end"
                android:id="@+id/tv_city"/>
        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:id="@+id/tv_date"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/ll_current_weather">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:id="@+id/icon_weather"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:id="@+id/tv_temperature"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:id="@+id/tv_description"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    style="@style/weathersItem.Layout">
                    <ImageView
                        style="@style/weathersItem.Image"
                        android:src="@mipmap/visibility"
                        android:id="@+id/icon_visibility"/>
                    <TextView
                        style="@style/weathersItem.Text"
                        android:id="@+id/tv_visibility"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/weathersItem.Layout">
                    <ImageView
                        style="@style/weathersItem.Image"
                        android:src="@mipmap/atmospheric_pressure"
                        android:id="@+id/icon_atmospheric_pressure"/>
                    <TextView
                        style="@style/weathersItem.Text"
                        android:id="@+id/tv_atmospheric_pressure"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/weathersItem.Layout">
                    <ImageView
                        style="@style/weathersItem.Image"
                        android:src="@mipmap/wind_speed"
                        android:id="@+id/icon_wind_speed"/>
                    <TextView
                        style="@style/weathersItem.Text"
                        android:id="@+id/tv_wind_speed"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/weathersItem.Layout">
                    <ImageView
                        style="@style/weathersItem.Image"
                        android:src="@mipmap/humidity"
                        android:id="@+id/icon_humidity"/>
                    <TextView
                        style="@style/weathersItem.Text"
                        android:id="@+id/tv_humidity"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/weathersItem.Layout"
                    android:visibility="gone"
                    android:id="@+id/ll_snow">
                    <ImageView
                        style="@style/weathersItem.Image"
                        android:src="@mipmap/snow"
                        android:id="@+id/icon_snow"/>
                    <TextView
                        style="@style/weathersItem.Text"
                        android:text="100mm"
                        android:id="@+id/tv_snowfall"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_weathers"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_weather_list"/>
    </LinearLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
</LinearLayout>